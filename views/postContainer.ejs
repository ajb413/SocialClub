<div id="posts" class="posts-container">

    <h3>

        SocialClub Posts

    </h3>

    <ul>

        <% for(var i=0; i<posts.length; i++) { %>

            <li>

                <% include post.ejs %>

            </li>

        <% } %>

        <li>

            <br />

            <div class="left">

                <b>New Post</b>

            </div>

            <br />

            <input type="text" ng-model="post.content" />
            
            <br />

            <div class="posts-button-container">
                
                <input type="submit" value="Post" ng-click="submitNewPost()"/>
            
            </div>

        </li>

    </ul>

    <br />

</div>